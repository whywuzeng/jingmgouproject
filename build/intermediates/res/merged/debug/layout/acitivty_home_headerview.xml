<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/color_e7e7e7"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/ad_banner"/>

        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_33">

                <LinearLayout
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_9"
                        android:src="@drawable/ic_side"/>

                    <TextView
                        android:textSize="@dimen/textsize_14"
                        android:textColor="#ff000000"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="赚取精明豆"/>
                </LinearLayout>

                <LinearLayout
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_beans"/>

                    <TextView
                        android:textSize="@dimen/textsize_14"
                        android:textColor="@color/color_666666"
                        android:gravity="center_vertical"
                        android:id="@id/tv_beans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_4"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:text="0豆"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="@color/color_e7e7e7"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dimen_line"/>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@id/ll_function_mode"
                android:layout_width="fill_parent"
                android:layout_height="90.0dip"/>
        </LinearLayout>

        <View
            android:background="@color/color_e7e7e7"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_line"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip">

            <ImageView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_35"
                android:layout_marginLeft="@dimen/dimen_9"
                android:layout_marginRight="@dimen/dimen_10"
                android:src="@drawable/toutiao"/>

            <TextSwitcher
                android:layout_gravity="center_vertical"
                android:id="@id/ts_award_list"
                android:paddingRight="@dimen/dimen_10"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"/>
        </LinearLayout>

        <View
            android:background="@color/color_e7e7e7"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dimen_line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="left|center"
                android:orientation="horizontal"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_weight="0.8">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_9"
                    android:src="@drawable/ic_side"/>

                <TextView
                    android:textSize="@dimen/textsize_14"
                    android:textColor="#ff000000"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近精选"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@id/choose_pro_item"
                android:background="@drawable/choose_pro_1"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/dimen_31"
                android:layout_marginTop="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_weight="1.0">

                <TextView
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@id/store"
                    android:tag="1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="超市"
                    android:layout_weight="1.0"/>

                <TextView
                    android:textSize="@dimen/textsize_14"
                    android:textColor="@color/color_f2572d"
                    android:gravity="center"
                    android:id="@id/deparement_cloth"
                    android:tag="2"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:text="百货服装"
                    android:layout_weight="1.0"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>